        :root {
            --clr-red: hsl(0, 62%, 46%);
            --clr-red-dark: hsl(0, 63%, 38%);
            --clr-bg: hsl(0, 0%, 90%);
            --clr-dark: hsl(0, 0%, 12%);
        }

        html {
            scroll-behavior: smooth;
        }

        body {
            background-color: var(--clr-bg);
            color: black;
            display: grid;
            grid-template-rows: max-content max-content 1fr max-content;
            grid-template-columns: 1fr;
            min-height: 100vh;
        }

        .container {
            width: 100%;
        }

        @media screen and (max-width: 1023px) {

            .fw-header,
            .fw-main .container,
            .fw-footer {
                padding-inline: 1.5rem;
            }
        }

        .button,
        .card,
        .box,
        .input,
        .textarea,
        .select select {
            border-radius: 0;
        }

        .button.is-info {
            background-color: var(--clr-dark);
        }

        .button.is-info:hover {
            background-color: var(--clr-red-dark);
        }

        .fw-header {
            padding-block: 2rem;
            display: grid;
            grid-template-columns: max-content 1fr max-content;
            align-items: center;
            gap: 1rem;
        }

        .fw-header span+span {
            color: var(--clr-red);
        }

        .fw-nav-wrapper {
            position: sticky;
            top: 0;
            background-color: var(--clr-bg);
            z-index: 30;
        }

        .fw-nav {
            --border-bottom-size: 5px;
            background-color: var(--clr-red);
            color: white;
        }

        .fw-nav ul {
            display: flex;
            flex-wrap: wrap;
        }

        .fw-nav::before {
            content: "";
            display: block;
            height: var(--border-bottom-size);
            background-color: black;
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            z-index: 1;
        }

        .fw-nav a {
            color: inherit;
            background-color: inherit;
            display: block;
            padding: 1.5rem 1.25rem;
            font-weight: 600;
            font-size: 1.3em;
            border-bottom: var(--border-bottom-size) solid black;
            border-right: .125rem solid var(--clr-red-dark);
            transition: all .25s;
            position: relative;
            z-index: 2;
        }

        .fw-nav li {
            color: inherit;
            background-color: inherit;
        }

        .fw-nav li:hover,
        .fw-nav li:focus {
            background-color: white;
            color: black;
        }

        .fw-nav .active a {
            background-color: white;
            color: black;
        }

        ul.fw-subnav {
            display: none;
            position: absolute;
            box-shadow: 0 .5em 1em -.125em rgba(10, 10, 10, .1), 0 0 0 1px rgba(10, 10, 10, .02);
        }

        .fw-subnav {
            flex-direction: column;
            background-color: white;
            color: black;
        }

        .fw-subnav a {
            font-weight: normal;
            font-size: 0.95em;
            border: none;
            transition: all .25s;
            padding: 0.75rem 1.25rem;
        }

        .fw-subnav a:hover {
            background-color: var(--clr-red);
            color: white;
        }

        .fw-with-subnav:hover ul {
            display: flex;
        }

        .fw-with-subnav>a::after {
            content: "\2771";
            font-weight: 300;
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
            text-align: center;
            transform: rotate(90deg);
        }

        .fw-footer {
            background-color: black;
            color: white;
            padding-block: 1.25rem;
        }

        .fw-footer>* {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            justify-content: space-between;
        }

        .fw-image-with-text {
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .fw-image-with-text .container {
            padding-block: 18rem 5rem;
        }

        .fw-columns,
        .fw-contact {
            padding-block: 5rem;
        }

        .fw-columns.fw-dark {
            background-color: var(--clr-dark);
            color: white;
        }

        .fw-columns.fw-red {
            background-color: var(--clr-red-dark);
            color: white;
        }

        .fw-maps iframe {
            width: 100%;
        }

        .back-to-top a::before {
            position: fixed;
            z-index: 1000;
            bottom: 1.5rem;
            right: 1.5rem;
            height: 2.5rem;
            width: 2.5rem;
            content: "\2771";
            background-color: white;
            transform: rotate(-90deg);
            box-shadow: 0 .5em 1em -.125em rgba(10, 10, 10, .1), 0 0 0 1px rgba(10, 10, 10, .02);
            display: grid;
            place-items: center;
        }

        .back-to-top a:hover::before {
            background-color: var(--clr-red);
        }

        a.navbar-burger,
        .fw-mobile-nav {
            display: none;
        }

        @media screen and (max-width: 900px) {
            .fw-nav ul li:not(.active):not(.fw-nav-toggler) {
                display: none;
            }

            .fw-nav ul {
                justify-content: space-between;
            }

            a.navbar-burger {
                display: block;
                height: 100%;
                padding-inline: 2rem;
            }

            .fw-mobile-nav.show {
                display: grid;
            }

            .fw-mobile-nav {
                box-shadow: 0 .5em 1em -.125em rgba(10, 10, 10, .1), 0 0 0 1px rgba(10, 10, 10, .02);
                background-color: white;
            }

            .fw-mobile-nav a {
                display: block;
                padding: 0.5rem 1rem;
                color: black;
                transition: all .25s;
            }

            .fw-mobile-nav a:hover {
                background-color: var(--clr-red);
                color: white;
            }

            .fw-mobile-nav li li {
                margin-left: 2rem;
            }
        }

    </style>
</head>

