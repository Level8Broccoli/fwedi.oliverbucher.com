    <script>
        (function modal() {
            const MODAL_STORAGE_KEY = "modal-dismiss-until";
            const DIMISS_FOR_MS = 10 * 60 * 1000;
            const modal = document.querySelector("[data-modal]");
            const modalDismissButton = document.querySelector("[data-dismiss-modal-button]");
            const modalDismissClose = document.querySelector("[data-dismiss-modal-close]");

            const lastTimeDismissed = localStorage.getItem(MODAL_STORAGE_KEY);

            try {
                if (lastTimeDismissed) {
                    const dateParsed = new Date(JSON.parse(lastTimeDismissed).lastTimeDismissed);
                    const now = new Date();
                    if (now - dateParsed > DIMISS_FOR_MS) {
                        showModal();
                    }
                } else {
                    showModal();
                }
            } catch (error) {
                showModal();
            }

            function showModal() {
                modal.classList.add("is-active");
            }

            function dismiss() {
                const now = new Date();
                modal.classList.remove("is-active");
                localStorage.setItem(MODAL_STORAGE_KEY, JSON.stringify({ lastTimeDismissed: now }))
            }

            modalDismissButton.addEventListener("click", dismiss);
            modalDismissClose.addEventListener("click", dismiss);
        })();

        (function upCount() {
            const observer = new IntersectionObserver(() => {
                console.log("check");
                const counter = document.querySelectorAll("[data-up-count]");
                counter.forEach(c => {
                    const attrVal = c.getAttribute("data-up-count");
                    const hasK = attrVal.includes("K");
                    const goal = hasK ? Number(attrVal.substring(0, attrVal.length - 1)) : Number(attrVal);
                    c.innerHTML = 0;
                    const numOfValues = 25;
                    for (let i = 0; i < numOfValues; i++) {
                        const newValue = Math.floor(goal / (numOfValues - i));
                        setTimeout(() => {
                            c.innerHTML = hasK ? newValue + "K" : newValue;
                        }, (i * 100));
                    }
                });
            });
            observer.observe(document.getElementById("fw-observer"));
        })();

        (function navToggler() {
            const toggler = document.querySelector("[data-nav-toggler]");
            const nav = document.querySelector("[data-mobile-nav]");
            toggler.addEventListener("click", () => {
                if (nav.classList.contains("show")) {
                    nav.classList.remove("show");
                } else {
                    nav.classList.add("show");
                }
            })

        })();
    </script>
